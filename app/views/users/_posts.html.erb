<% @user.latest_posts.each do |post| %>
<div class="test my-3 d-flex flex-column">
    <h5># Post : <%= post.title%></h5>
    <p><%= truncate post.text, length: 160%></p>
    <div class="p-2 mt-2 d-flex justify-content-center justify-self-end rounded">
        <div class="d-flex justify-content-end w-100"> <span class="badge bg-success p-1">Comments: <%= post.comments_counter%></span>  <span class="badge bg-dark p-1">Likes: <%= post.likes_counter%></span></span> </div>
    </div>
</div>
<%end%>